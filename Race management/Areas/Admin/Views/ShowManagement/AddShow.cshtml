@model AddShowViewModel
@{
    ViewData["Title"] = "AddShow";
}

<h1>AddShow</h1>

<form asp-action="AddShow" asp-controller="ShowManagement">
    <div asp-validation-summary="ModelOnly"></div>
    <br />

    <label asp-for="Players"></label>
    @{
        if (Model.Players.Count != 0 && Model.Players.Count != null)
        {
            <select asp-for="SelectedPlayerID">
                @foreach (var items in Model.Players)
                {
                    <option value="@items.id">@items.name</option>
                }
            </select>
            <br />
        }
        else
        {
            <div>هیچ بازکنی موجود نیست بنابراین امکان افزودن وجود ندارد.</div>
        }
    }

    <label asp-for="Title"></label>
    <input asp-for="Title">
    <span asp-validation-for="Title"></span>
    <br />

    <label asp-for="DateTime"></label>
    <input asp-for="DateTime">
    <span asp-validation-for="DateTime"></span>
    <br />

    <input type="submit" value="افزودن" />
</form>

