@model List<ShowManagementViewModel>
@{
    ViewData["Title"] = "ManageShow";
}

<h1>ManageShow</h1>

@{
    if (Model.Count == 0 || Model.Count == null)
    {
        <div>هیچ اجرایی برای نمایش وجود ندارد</div>
    }
    else
    {
        <table>
            <tr>
                <th>
                    کد اجرا
                </th>
                <th>
                    نام اجرا
                </th>
                <th>
                    تاریخ اجرا
                </th>
                <th>
                    میانگین امتیاز
                </th>
                <th>
                    بازیکن
                </th>
            </tr>


            @foreach (var show in Model)
            {
                <tr>
                    <td>@show.Id</td>
                    <td>@show.title</td>
                    <td>@show.date</td>
                    <td>@show.Score</td>
                    <td>
                        <a>@show.PlayerNames.name</a>
                    </td>
                </tr>
            }
        </table>
    }
}
