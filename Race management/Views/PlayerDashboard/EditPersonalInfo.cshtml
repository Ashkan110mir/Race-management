@model PlayerEditPersonalInfoViewModel
@{
    ViewData["Title"] = "EditPersonalInfo";
}

<h1>EditPersonalInfo</h1>

<form method="post" asp-controller="PlayerDashboard" asp-action="EditPersonalInfo">
    <div asp-validation-summary="ModelOnly"></div>

    <label asp-for="Name"></label>
    <input asp-for="Name" value="@Model.Name" />
    <span asp-validation-for="Name"></span>
    <br />

    <label asp-for="LastName"></label>
    <input asp-for="LastName" value="@Model.LastName" />
    <span asp-validation-for="LastName"></span>
    <br />

    <label asp-for="EmailAddress"></label>
    <input asp-for="EmailAddress" value="@Model.EmailAddress" />
    <span asp-validation-for="EmailAddress"></span>
    <br />

    <label asp-for="PhoneNumber"></label>
    <input asp-for="PhoneNumber" value="@Model.PhoneNumber" />
    <span asp-validation-for="PhoneNumber"></span>
    <br />

    <input type="submit" value="ویرایش اطلاعات" />
    <br />

</form>